{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "clean": {},
    "build": {
      "dependsOn": ["lint"],
      "inputs": ["*.json", "*.ts", "src/**"],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "inputs": ["*.json", "*.ts", "src/**"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": ["*.ts", "*.json", "src/**"]
    },
    "verify-types": {
      "inputs": ["*.ts", "*.json", "src/**"]
    }
  }
}
