{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "biome.json",
    "packages/tsconfig/**"
  ],
  "tasks": {
    "build:dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["lint", "^build"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "verify-types": {},
    "lint": {},
    "test": {
      "dependsOn": ["@internal/backend-errors#build:dev"],
      "persistent": true,
      "cache": false
    },
    "build:backend": {
      "dependsOn": ["@internal/backend#lint","@internal/backend#build:dev"],
      "cache": true,
      "inputs": ["apps/backend-api/**", "!apps/backend-api/dist/**"],
      "outputs": [
        "apps/backend/dist/**",
        "packages/backend-client/openapi.yml"
      ]
    },
    "generate:sdk": {
      "dependsOn": [
        "build:backend",
        "@internal/backend-client#build:dev"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": ["build:dev"],
      "cache": false,
      "persistent": true
    },
    "prod": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    }
  }
}
