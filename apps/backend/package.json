{
  "name": "@internal/backend",
  "description": "",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "db:migrate:create": "kysely migrate make",
    "db:migrate:latest": "kysely migrate latest",
    "db:migrate:undo": "kysely migrate down",
    "generate": "bun run scripts/generate-client-yaml.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "compile": "bun build --compile --target=bun --bytecode --minify --sourcemap ./src/index.ts --outfile ./dist/backend",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "bun run --watch ./src/index.ts",
    "lint": "biome check --no-errors-on-unmatched --write --unsafe src",
    "lint:staged": "biome check --no-errors-on-unmatched --write --unsafe --staged src",
    "prod": "bun run ./dist/index.js",
    "test": "vitest --run",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.52.0",
    "@fastify/cors": "11.2.0",
    "@fastify/jwt": "10.0.0",
    "@fastify/swagger": "9.6.1",
    "@fastify/swagger-ui": "5.2.5",
    "@fastify/type-provider-typebox": "6.1.0",
    "@internal/backend-errors": "workspace:*",
    "@loglayer/transport-simple-pretty-terminal": "2.3.1",
    "typebox": "1.0.80",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "asyncforge": "0.5.0",
    "bcryptjs": "3.0.2",
    "dotenv": "17.2.3",
    "env-var": "7.5.0",
    "fastify": "5.7.2",
    "fastify-cli": "7.4.1",
    "fastify-plugin": "5.1.0",
    "kysely": "0.28.11",
    "loglayer": "8.4.0",
    "nanoid": "5.1.6",
    "pg": "8.18.0",
    "serialize-error": "13.0.1",
    "uuid": "13.0.0",
    "yaml": "2.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "10.2.0",
    "@internal/tsconfig": "workspace:*",
    "@testcontainers/postgresql": "11.11.0",
    "@turbo/gen": "2.8.1",
    "@types/node": "25.1.0",
    "@types/pg": "8.16.0",
    "jiti": "2.6.1",
    "kysely-ctl": "0.20.0",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
